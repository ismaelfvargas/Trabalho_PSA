@model Entities.Models.Produto

    <center><h1>Responder Solicitação de Compra do Produto</h1></center>

<div>
    <center><h4>@Model.Name</h4></center>
    <hr />

    <div>
        @if (Model.Estado == Entities.Models.Enums.StatusProduto.Aguardando_Aprovacao)
        {
        <div>
            <a asp-action="AceitarCompra" asp-route-id="@Model.ProdutoId" class="btn btn-danger text-warning">Aceitar a Compra</a>
            <hr />
        </div>
        <div>
            <a asp-action="NegarCompra" asp-route-id="@Model.ProdutoId" class="btn btn-danger text-warning">Negar a Compra</a>
            <hr />
        </div>
        }
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataEntrada)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEntrada)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataVenda)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeComprador)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeComprador)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoComprador)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoComprador)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Name)
        </dd>
    </dl>
</div>

<div>    
    <a asp-action="Details" asp-route-id="@Model.ProdutoId" class="btn btn-danger text-warning">Voltar</a>
</div>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }

        .row {
            display: flex;
        }

        .column {
            flex: 33.33%;
            padding: 5px;
        }
    </style>
</head>


<body>
    <div>
        <hr />
        <center><h3>Imagens</h3></center>
        <center>
            <div class="row">
                <div class="column">
                    @foreach (Entities.Models.Imagem im in Model.Imagens)
                    {
                        <img src=@Url.Action("GetImage", "ProdutosDisponiveis", new { id=im.ImagemId})
                             alt=@im.ImageMimeType
                             style="width:20%">
                    }
                </div>
            </div>
        </center>
    </div>
</body>
</html>
