@model Entities.Models.Produto

@{
    ViewData["Title"] = "Detalhes";
}

<center><h1>Detalhes do produto</h1></center>

<div>
    <hr />
    <a asp-action="Entrega" asp-route-id="@Model.ProdutoId">Entregar produto</a><br>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutoId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeVendedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeVendedor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeComprador)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeComprador)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoComprador)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoComprador)
        </dd>
    </dl>
</div>
<hr />
<div>
    @if (Model.Estado == Entities.Models.Enums.StatusProduto.Vendido)
        {
            <a asp-action="ProdutosDisponiveisParaEntrega">Voltar</a>
        }
    else
        {
            <a asp-action="Index">Voltar</a>
        }
</div>
