@model Entities.Models.ApplicationUser

@{
    ViewData["Title"] = "Informacoes do vendedor";
}

<center><h1>Informações do vendedor</h1></center>

<div>
    <center><h4>@Model.UserName</h4></center>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome do usuário:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutosAVenda):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutosAVenda)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutosAguardandoApVenda):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutosAguardandoApVenda)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutosVendido):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutosVendido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutosEmRotaDeEntrega):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutosEmRotaDeEntrega)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutosEntregue):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutosEntregue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutosBloqueado):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutosBloqueado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReputacaoFinal):
        </dt>
        <dd class="col-sm-10">
           @Html.DisplayFor(model => model.ReputacaoFinal)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Details" asp-route-id="@ViewBag.prodID" class="btn btn-danger text-warning">Voltar</a>
</div>


